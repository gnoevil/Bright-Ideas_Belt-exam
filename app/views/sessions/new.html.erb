<div class="container">
	<h3>Welcome!</h3>
		<div class="errors">
			<% if flash[:errors] %>
			<% flash[:errors].each do |error| %>
			<%= error %>
			<% end
		end %>
		<%= flash[:success] %>
	</div>
	<div class="register col-md-5">
	<fieldset>
	<legend>Registration</legend>
	<form action="/users" method="post" class ="form-horizontal">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<div class="form-group">
			<label for="name" class="col-md-4">Name: </label>
			<input type="text" class= "col-md-8" name="name">
		</div>
		<div class="form-group">
			<label for="alias" class="col-md-4">Alias: </label>
			<input type="text" class= "col-md-8" name="alias">
		</div>
		<div class="form-group">
			<label for="email" class="col-md-4">Email: </label>
			<input type="email" class= "col-md-8" name="email">
		</div>
		<p class="col-md-offset-4">****Password should be at least 8 characters</p>
		<div class="form-group">
			<label for="password" class="col-md-4">Password: </label>
			<input type="password" class= "col-md-8" name="password">
		</div>
		<div class="form-group">
			<label for="confirm_password" class="col-md-4">Confirm PW: </label>
			<input type="password" class= "col-md-8" name="confirm_password">
		</div>
		<div class="form-group">
			<input class="btn btn-default pull-right" type="submit" value="Register">
		</div>
	</form>
</fieldset>
</div>
<div class="login col-md-5">
<fieldset>
<legend>Login</legend>
	<form action="/sessions" method="post" class ="form-group">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<div class="form-group">
			<label for="email" class="col-md-4">Email: </label>
			<input type="email" class= "col-md-8" name="email">
		</div>
		<div class="form-group">
			<label for="password" class="col-md-4">Password: </label>
			<input type="password" class= "col-md-8" name="password">
		</div>
		<div class="form-group">
			<input class="btn btn-default pull-right" type="submit" value="Login">
		</div>
	</form>
	<%= flash[:error]%>
</div>
</div>
